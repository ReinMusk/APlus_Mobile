<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="APlus_Mobile.ProjectsPage"
             Visual="Material">
    
    <NavigationPage.TitleView>
        <Label Text="Проекты" FontSize="24" TextColor="White"  Margin="40,0"/>
    </NavigationPage.TitleView>
    <ContentPage.ToolbarItems>
        <ToolbarItem
            IconImageSource="Plus.png"
            Order="Primary" Clicked="CreateProject"/>
    </ContentPage.ToolbarItems>

    <StackLayout>
        <ListView x:Name="projectList" ItemsSource="{Binding Projects}" ItemSelected="OnItemSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <ViewCell.View>
                            <StackLayout Orientation="Horizontal">
                                <Label Text="{Binding Name}" Margin="13,0,0,0" TextColor="Black" VerticalTextAlignment="Center" FontSize="24" FontFamily="FelixFont" Padding="1"/>
                            </StackLayout>
                        </ViewCell.View>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>