<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="APlus_Mobile.Contacts"
             Title="Контакты"
             Visual="Material">
    
    <ContentPage.Content >
        <StackLayout BackgroundColor="White">
            <Frame  Margin="40,40,40,40"
                    Padding="0" BorderColor="#E8E8E8">
                <Entry FontFamily="FelixFont" x:Name="txt_contc_tel1" BackgroundColor="#E8E8E8" Placeholder="Телефон1" TextColor="Black" />
            </Frame>

            <Frame Margin="40,0,40,40"
                    Padding="0" BorderColor="#E8E8E8">
                <Entry FontFamily="FelixFont" x:Name="txt_contc_tel2" BackgroundColor="#E8E8E8" Placeholder="Телефон2" TextColor="Black"/>
            </Frame>

            <Frame Margin="40,0,40,40"
                    Padding="0" BorderColor="#E8E8E8">
                <Entry  FontFamily="FelixFont" x:Name="txt_password1" BackgroundColor="#E8E8E8" IsPassword ="True" Placeholder="E-mail" TextColor="Black"/>
            </Frame>

            <Frame Margin="40,0,40,150"
                    Padding="0" BorderColor="#E8E8E8">
                <Entry FontFamily="FelixFont" x:Name="txt_password2" BackgroundColor="#E8E8E8" IsPassword ="True" Placeholder="Адрес" TextColor="Black"/>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>